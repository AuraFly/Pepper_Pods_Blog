<html>
  <head>
    <title>Pepper Pods</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="dist/css/uikit.min.css" />
    <link rel="stylesheet" href="dist/css/stylesheet.css" />
    <script src="dist/js/uikit.min.js"></script>
    <script src="dist/js/uikit-icons.min.js"></script>
  </head>

  <nav class="uk-navbar-container" uk-navbar>
    <div class="uk-navbar-left"><h1 id="maintitle">Pepper Pods Blog</h1></div>
    <div class="uk-navbar-right">
      <ul class="uk-navbar-nav">
        <li class="uk-parent">
          <a href="/"><img
              src="/media/pepperpodic.png"
              alt="homeicon"
              id="homeicon"
              class="navbtn"
            />Home</a>
        </li>
        {{#if logged_in}}
          <li class="uk-parent">
            <a href="/account"><img
                src="/media/useric.png"
                alt="profileicon"
                id="profileicon"
                class="navbtn"
              />Account</a>
          </li>
        {{else}}
          <li class="uk-parent">
            <a href="/login"><img
                src="/media/useric.png"
                alt="profileicon"
                id="profileicon"
                class="navbtn"
              />Login</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>

  <body>
    <div class="flex-column justify-space-around">
      <header class="display-flex justify-space-between align-center p-2">
      </header>
      <main class="container container-fluid mt-5">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>