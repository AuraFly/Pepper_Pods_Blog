<div>
  <div class="uk-inline">
    <img
      class="uk-align-right"
      src="/media/hotsauce1.jpg"
      alt="sauces"
      width="1800"
      height="1200"
    />
    <div class="uk-overlay-default uk-position-cover"></div>
    <div class="uk-overlay uk-position-cover uk-dark">
      {{! login forms }}
      <div class="uk-column-1-2">
        <form class="signinsection">
          <h4>Login</h4>
          <div class="uk-margin">
            <label for="email-login">Email:</label>
            <br />
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <input class="uk-input" type="text" id="email-login" />
            </div>
          </div>

          <div class="uk-margin">
            <label for="password-login">Password:</label>
            <br />
            <div class="uk-inline">
              <span
                class="uk-form-icon uk-form-icon-flip"
                uk-icon="icon: lock"
              ></span>
              <input class="uk-input" type="password" id="password-login" />
            </div>
            <br />
          </div>
          <div class="form-group p-1">
            <button
              class="uk-button uk-button-primary uk-button-small login"
              type="submit"
            >Submit</button>
          </div>
        </form>
        <br />
        <form class="signupsection">
          <br />

          {{! signup forms }}
          <h4>Signup</h4>
          <div class="uk-margin">
            <label for="username-create">Userame:</label>
            <br />
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: user"></span>
              <input class="uk-input" type="text" id="name-signup" />
            </div>
          </div>

          <div class="uk-margin">
            <label for="email-create">Email:</label>
            <br />
            <div class="uk-inline">
              <span class="uk-form-icon" uk-icon="icon: mail"></span>
              <input class="uk-input" type="text" id="email-signup" />
            </div>
          </div>

          <div class="uk-margin">
            <label for="password-create">Create password:</label>
            <br />
            <div class="uk-inline">
              <span
                class="uk-form-icon uk-form-icon-flip"
                uk-icon="icon: lock"
              ></span>
              <input class="uk-input" type="password" id="password-signup" />
            </div>
          </div>
          <div class="form-group p-2">
            <button
              class="uk-button uk-button-primary uk-button-small"
              id="pushme"
              type="submit"
            >Create</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/dist/js/login.js"></script>